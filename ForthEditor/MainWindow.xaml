<Window x:Class="ForthEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ForthEditor"
        mc:Ignorable="d" FontFamily="Consolas" FontSize="14" 
        Background="WhiteSmoke" Loaded="Window_Loaded"
        Title="Forth editor" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <local:ForthModel/>
    </Window.DataContext>
    <Grid FocusManager.FocusedElement="{Binding ElementName=cmdLine}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <ListBox Grid.Row="0" Grid.Column="0" BorderThickness="0"
                 x:Name="lbxCommands" Background="WhiteSmoke" Foreground="Black"
                 ScrollViewer.VerticalScrollBarVisibility="Disabled" 
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=Line}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox Grid.Row="0" Grid.Column="1" BorderThickness="0" HorizontalContentAlignment="Right"
                 x:Name="lbxStack" Background="Silver" Foreground="Black"
                 ScrollViewer.VerticalScrollBarVisibility="Disabled" 
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="0">
                        <TextBlock Text="{Binding Path=Value}" HorizontalAlignment="Right"/>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" BorderThickness="0" Padding="0,0,0,5">
            <TextBox x:Name="cmdLine" Text="{Binding Path=CommandLine}" KeyDown="cmdLine_KeyDown"
                      Background="LightYellow" Foreground="Black" BorderThickness="0"/>
        </Border>
    </Grid>
</Window>
